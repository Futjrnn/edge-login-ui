{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:react-native/all",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "standard",
    "promise",
    "react",
    "react-native"
  ],
  "rules": {
    "flowtype/generic-spacing": "off",
    "camelcase": "error",
    "no-throw-literal": "error",
    "no-var": "error",
    "prefer-const": "error",
    "react/prop-types": "off",
    "react/display-name": "off"
  }
}
